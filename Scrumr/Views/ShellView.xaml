<Controls:MetroWindow  x:Class="Scrumr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Scrumr"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        Title="Scrumr for Desktop" Height="571" Width="1008" TextOptions.TextFormattingMode="Display" WindowStartupLocation="CenterScreen"
        GlowBrush="{DynamicResource AccentColorBrush}" WindowTitleBrush="White" TitleForeground="Black" Background="White" NonActiveWindowTitleBrush="White" ShowTitleBar="False">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10 0" >
            <Label Content="Scrumr" FontSize="22" FontFamily="Segoe UI Semibold" VerticalAlignment="Center"/>
            <Label Content="for PC"  FontSize="22" Foreground="Gray" VerticalAlignment="Center"/>
        </StackPanel>
        <local:BoardView Grid.Row="1" x:Name="Board" Visibility="Collapsed" />
        <Controls:ProgressRing Grid.Row="1" x:Name="ProgressBusy" IsActive="True" />
    </Grid>
</Controls:MetroWindow >
