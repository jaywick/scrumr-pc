<UserControl x:Class="Scrumr.Client.ProjectTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d">
    <Grid>
        <metro:Tile x:Name="tileProject" Width="300" Margin="8,4">
            <Label x:Name="textContainer" FontSize="20" HorizontalContentAlignment="Right" VerticalContentAlignment="Bottom" Height="140" Width="300" >
                <TextBlock x:Name="labelName" TextWrapping="WrapWithOverflow" Padding="8,5" Text="test text" Foreground="White"/>
            </Label>
        </metro:Tile>
    </Grid>
    
</UserControl>
